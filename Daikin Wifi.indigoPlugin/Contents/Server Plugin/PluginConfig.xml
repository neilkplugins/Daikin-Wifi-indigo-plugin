<?xml version="1.0"?>
<PluginConfig>

	<Field id="logLevel" type="menu" defaultValue="20">
		<Label>Event Logging Level:</Label>
		<List>
			<Option value="5">Verbose Debugging Messages</Option>
			<Option value="10">Debugging Messages</Option>
			<Option value="20">Informational Messages</Option>
			<Option value="30">Warning Messages</Option>
			<Option value="40">Error Messages</Option>
			<Option value="50">Critical Errors Only</Option>
		</List>
	</Field>
	<Field id="simpleseparator4" type="separator">
	</Field>
	<Field id="midLabel" type="label" fontSize="small" fontColor="darkgray">
		<Label>Polling frequency to refresh AC Status and timeouts for requests (defaults should be fine)</Label>
	</Field>
	<Field id="pollingFrequency" type="textfield" defaultValue="15">
	<Label>Enter Polling Frequency in Seconds:</Label>
	</Field>
	<Field id="request_timeout" type="textfield" defaultValue="2">
	<Label>Enter Request Timeout in Seconds:</Label>
	</Field>
</PluginConfig>